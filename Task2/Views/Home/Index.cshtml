@model PersonalData
@{
    ViewData["Title"] = "Карточка сотрудника";
}

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
    Запросить изменение личных данных
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div style="max-width: 696px;" class="modal-dialog" role="document">
        <div class="modal-content">
            <div style="align-self: center;" class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">ЗАПРОС НА ИЗМЕНЕНИЕ ЛИЧНЫХ ДАННЫХ</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form" asp-action="Index" asp-controller="Home" asp-antiforgery="true">
                    <div>
                        <div class="form-group row">
                            <label asp-for="DivisionId" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <select class="form-control" asp-for="DivisionId" asp-items="ViewBag.Divisions"></select>
                                <span asp-validation-for="DivisionId"></span>
                            </div>

                        </div>
                        <div class="form-group row">
                            <label asp-for="PositionId" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <select class="form-control" asp-for="PositionId" asp-items="ViewBag.Positions"></select>
                                <span asp-validation-for="PositionId"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="PhoneNumberFirst" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input class="form-control" asp-for="PhoneNumberFirst" />
                                <span asp-validation-for="PhoneNumberFirst"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="PhoneNumberSecond" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input class="form-control" asp-for="PhoneNumberSecond" />
                                <span asp-validation-for="PhoneNumberSecond"></span>
                                <span style="display: none;" class="test">Телефоны должны различаться</span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="OfficeAddress" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input class="form-control" asp-for="OfficeAddress" />
                                <span asp-validation-for="OfficeAddress"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Cabinet" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input class="form-control" asp-for="Cabinet" />
                                <span asp-validation-for="Cabinet"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Comment" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input class="form-control" asp-for="Comment" />
                                <span asp-validation-for="Comment"></span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                        <input id="submit" type="submit" S class="btn btn-primary" value="Отправить" />
                    </div>
                </form>
            </div>
           
        </div>
    </div>
</div>

